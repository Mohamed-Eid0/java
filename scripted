node('day2') {

    // Tools
    def mvnHome = tool name: 'Maven-3.8.9'
    def IMAGE_NAME = "eido00/python-iti-main-scripted"

    try {

        stage('Checkout') {
            git branch: 'main', url: 'https://github.com/Mohamed-Eid0/java.git'
        }

        stage('Build') {
            echo "Build Number: ${env.BUILD_NUMBER}"
            if (env.BUILD_NUMBER.toInteger() < 5) {
                error("Build number is less than 5. Stopping pipeline!")
            }

            bat "${mvnHome}\\bin\\mvn clean package"
        }

        stage('Docker Build') {
            bat "docker build -t ${IMAGE_NAME}:${env.BUILD_NUMBER} ."
        }

        stage('Docker Login') {
            withCredentials([string(credentialsId: 'dockerhub-pass', variable: 'DOCKERHUB_PASS')]) {
                bat """
                echo %DOCKERHUB_PASS% | docker login -u eido00 --password-stdin
                """
            }
        }

        stage('Docker Push') {
            bat "docker push ${IMAGE_NAME}:${env.BUILD_NUMBER}"
        }

        stage('Deploy') {
            bat """
            echo Deploying container...

            docker stop python-app || exit 0
            docker rm python-app || exit 0

            docker run -d -p 9000:8080 --name python-app ${IMAGE_NAME}:${env.BUILD_NUMBER}

            echo App is running on: http://localhost:9000
            """
        }

        echo "âœ… Pipeline finished successfully!"

    } catch (err) {
        echo "âŒ Pipeline failed! Reason: ${err}"
        currentBuild.result = 'FAILURE'
        throw err

    } finally {
        echo "ðŸ§¹ Cleaning workspace..."
        cleanWs()
    }
}
